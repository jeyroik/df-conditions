{
  "name": "jeyroik/df-conditions",
  "description": "Conditions package for DeFlou",
  "require": {
    "jeyroik/df-triggers": "3.*",
    "jeyroik/df-langs": "0.*",
    "jeyroik/extas-conditions": "2.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "jeyroik/extas-snuffbox": "1.*"
  },
  "autoload": {
    "psr-4": {
      "deflou\\": "src/",
      "tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --testdox --coverage-clover=coverage.xml --whitelist=src tests"
  }
}